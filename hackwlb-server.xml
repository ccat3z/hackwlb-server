<?xml version="1.0" encoding="UTF-8"?>
<project name="hackwlb-server" default="all">
  
  
  <property file="hackwlb-server.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.httpcomponents-client-4.5.2.classpath">
    <pathelement location="${basedir}/lib/commons-codec-1.9.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.2.jar"/>
    <pathelement location="${basedir}/lib/fluent-hc-4.5.2.jar"/>
    <pathelement location="${basedir}/lib/httpclient-4.5.2.jar"/>
    <pathelement location="${basedir}/lib/httpclient-cache-4.5.2.jar"/>
    <pathelement location="${basedir}/lib/httpclient-win-4.5.2.jar"/>
    <pathelement location="${basedir}/lib/httpcore-4.4.4.jar"/>
    <pathelement location="${basedir}/lib/httpmime-4.5.2.jar"/>
    <pathelement location="${basedir}/lib/jna-4.1.0.jar"/>
    <pathelement location="${basedir}/lib/jna-platform-4.1.0.jar"/>
  </path>
  
  <path id="library.json.classpath">
    <pathelement location="${basedir}/lib/json.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module hackwlb-server -->
  
  <dirname property="module.hackwlb-server.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.hackwlb-server" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="hackwlb-server.output.dir" value="${module.hackwlb-server.basedir}/out/production/hackwlb-server"/>
  <property name="hackwlb-server.testoutput.dir" value="${module.hackwlb-server.basedir}/out/test/hackwlb-server"/>
  
  <path id="hackwlb-server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hackwlb-server.module.production.classpath">
    <path refid="library.httpcomponents-client-4.5.2.classpath"/>
    <path refid="library.json.classpath"/>
  </path>
  
  <path id="hackwlb-server.runtime.production.module.classpath">
    <pathelement location="${hackwlb-server.output.dir}"/>
    <path refid="library.httpcomponents-client-4.5.2.classpath"/>
    <path refid="library.json.classpath"/>
  </path>
  
  <path id="hackwlb-server.module.classpath">
    <pathelement location="${hackwlb-server.output.dir}"/>
    <path refid="library.httpcomponents-client-4.5.2.classpath"/>
    <path refid="library.json.classpath"/>
  </path>
  
  <path id="hackwlb-server.runtime.module.classpath">
    <pathelement location="${hackwlb-server.testoutput.dir}"/>
    <pathelement location="${hackwlb-server.output.dir}"/>
    <path refid="library.httpcomponents-client-4.5.2.classpath"/>
    <path refid="library.json.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.hackwlb-server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hackwlb-server">
    <patternset refid="excluded.from.module.hackwlb-server"/>
  </patternset>
  
  <path id="hackwlb-server.module.sourcepath">
    <dirset dir="${module.hackwlb-server.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hackwlb-server" depends="compile.module.hackwlb-server.production,compile.module.hackwlb-server.tests" description="Compile module hackwlb-server"/>
  
  <target name="compile.module.hackwlb-server.production" description="Compile module hackwlb-server; production classes">
    <mkdir dir="${hackwlb-server.output.dir}"/>
    <javac destdir="${hackwlb-server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.hackwlb-server}"/>
      <bootclasspath refid="hackwlb-server.module.bootclasspath"/>
      <classpath refid="hackwlb-server.module.production.classpath"/>
      <src refid="hackwlb-server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hackwlb-server"/>
    </javac>
    
    <copy todir="${hackwlb-server.output.dir}">
      <fileset dir="${module.hackwlb-server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hackwlb-server.tests" depends="compile.module.hackwlb-server.production" description="compile module hackwlb-server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hackwlb-server" description="cleanup module">
    <delete dir="${hackwlb-server.output.dir}"/>
    <delete dir="${hackwlb-server.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.hackwlb-server" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.hackwlb-server" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.out" value="${basedir}/out/artifacts/out"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.out.jar" value="${artifacts.temp.dir}/out.jar"/>
  </target>
  
  <target name="artifact.out" depends="init.artifacts, compile.module.hackwlb-server" description="Build &#39;out&#39; artifact">
    <property name="artifact.temp.output.out" value="${artifacts.temp.dir}/out"/>
    <mkdir dir="${artifact.temp.output.out}"/>
    <jar destfile="${temp.jar.path.out.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${hackwlb-server.output.dir}"/>
      <zipfileset src="${basedir}/lib/commons-codec-1.9.jar"/>
      <zipfileset src="${basedir}/lib/commons-logging-1.2.jar"/>
      <zipfileset src="${basedir}/lib/fluent-hc-4.5.2.jar"/>
      <zipfileset src="${basedir}/lib/httpclient-4.5.2.jar"/>
      <zipfileset src="${basedir}/lib/httpclient-cache-4.5.2.jar"/>
      <zipfileset src="${basedir}/lib/httpclient-win-4.5.2.jar"/>
      <zipfileset src="${basedir}/lib/httpcore-4.4.4.jar"/>
      <zipfileset src="${basedir}/lib/httpmime-4.5.2.jar"/>
      <zipfileset src="${basedir}/lib/json.jar"/>
      <manifest>
        <attribute name="Main-Class" value="com.zf3zzzx.HackWLBServer"/>
      </manifest>
    </jar>
    <copy file="${temp.jar.path.out.jar}" tofile="${artifact.temp.output.out}/out.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.out" description="Build all artifacts">
    <mkdir dir="${artifact.output.out}"/>
    <copy todir="${artifact.output.out}">
      <fileset dir="${artifact.temp.output.out}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>